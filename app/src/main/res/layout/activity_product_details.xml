<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/product_details_imageview"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_products"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_name"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/product_details_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Product Name"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_price"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/product_details_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="999.00"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_description_heading"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/product_details_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Product Description"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_description"
        app:layout_constraintTop_toBottomOf="@id/product_details_description_heading"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="This the description of the above product. The description is liable to be long"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_quantity_heading"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/product_details_description"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Quantity: "
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="15dp"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/product_details_quantity"
        app:layout_constraintTop_toTopOf="@id/product_details_quantity_heading"
        app:layout_constraintStart_toEndOf="@id/product_details_quantity_heading"
        app:layout_constraintBottom_toBottomOf="@id/product_details_quantity_heading"
        tools:text="5"
        android:layout_marginHorizontal="20dp"
        android:textSize="18sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>